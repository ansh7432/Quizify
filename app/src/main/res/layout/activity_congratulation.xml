<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Congratulation"
    android:background="@drawable/mar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scorecard"
        android:fontFamily="@font/sunny"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-100dp"
        android:textColor="#E69215"
        android:textSize="70sp"
        android:textAlignment="center"
        android:textStyle="bold"
        style="@style/CardView.Dark"/>


    <pl.droidsonroids.gif.GifImageView

        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ocn"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have completed the Quiz..ðŸŽ¶"
        android:textColor="#AA5D00"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sunny"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sunny"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="#AA5D00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sunny"
        android:text="You have scored 9/10"
        android:textAlignment="center"
        android:textColor="#AF6102"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />


</LinearLayout>